<!DOCTYPE html>
<html lang="en">
<head class="HD">
    <%- include('share/head'); %>
</head>
<body>
    <div class="header">
        <%- include('share/navbar'); %>
    </div>
    <div id="custom-alert" class="hidden">
        <div class="icon-container">
          <img src="/image/navbar/icons8-ok.gif" alt="Anime Icon">
        </div>
        <div class="message-container">
          <p id="custom-alert-message"></p>
        </div>
      </div>
    <dialog id="custom-alert2" class="hidden">
        <div class="icon-container">
          <img src="/image/navbar/icons8-x.gif" alt="Anime Icon">
        </div>
        <div class="message-container">
          <p id="custom-alert-message2"></p>
        </div>
      </dialog>
      <dialog id="custom-confirm" class="hidden">
        <div class="icon-container">
          <img src="/image/navbar/icons8-warning-96.png" alt="Anime Icon">
        </div>
        <div class="message-container">
          <p id="custom-confirm-message"></p>
          <div class="button-container">
            <button id="custom-confirm-okay" class="btn btn-outline-primary fw-bold">確認</button>
            <button id="custom-confirm-cancel" class="btn btn-outline-primary fw-bold">取消</button>
          </div>
        </div>
      </dialog>
    <header>
        <div id="product_detail_up_return">
            <a class="btn">&lt;&lt;主商品頁</a>
        </div>
        <section class="py-5 container">
            <div class="row py-lg-2 border border-2 rounded">
              <div class="py-3">
                <div id="product_detail_up">

                </div>
                <%- include('share/dialog'); %>
            </div>
            </div>
        </section>
        <hr>
    </header>
